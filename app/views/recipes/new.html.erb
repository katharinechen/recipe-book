<% content_for(:title, "New Recipe | Recipe Book") %>
<% content_for(:heading, "New Recipe") %>
<% content_for(:content, "Share your ideas, use your imagination. Make awesome food.") %>

<%= render('layouts/errors', :object => @recipe) %>

<div class="container">

  <form action="/recipes" method="post" role="form">

    <!-- Add Names -->
    <div class="form-group">
      <label for="recipe_name">Recipe Name</label>
      <input type="text" id="recipe_name" value="<%=@recipe.name%>" name="recipe[name]" class="form-control" placeholder="Recipe Name">
    </div>

    <!--     Add Portions  -->
    <div class="form-group">
      <label for="portion_ingredient">Ingredient</label>
      <select class="form-control" name="recipe[portions_attributes[][ingredient_id]]">
        <% Ingredient.all.each do |ingredient| %>
          <option value="<%=ingredient.id %>"><%= ingredient.name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group">
      <label for="portion_quantity">Quantity</label>
      <input type="integer" name="recipe[portions_attributes[][quantity]]" class="form-control" placeholder="Ingredient Quantity">
    </div>

    <div class="form-group">
      <label for="portion_unit_of_measurement">Unit of Measurement</label>
      <input type="text" name="recipe[portions_attributes[][unit_of_measurement]]" class="form-control" placeholder="Unit of Measurement">
    </div>

    <!-- Add Content  -->
    <div class="form-group">
      <label for="recipe_content">Instructions</label>
      <textarea id="recipe_content" name="recipe[content]" type="textarea" rows="12" cols="60" value="<%= @recipe.content %>" class="form-control" rows="3">Enter your instructions here </textarea>
    </div>

    <!-- button -->
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Save Recipe</button>
    </div>
  </form>
</div>
