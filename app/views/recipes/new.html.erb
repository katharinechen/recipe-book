<% content_for(:title, "New Recipe | Recipe Book") %>
<% content_for(:heading, "New Recipe") %>
<% content_for(:content, "Share your ideas, use your imagination. Make awesome food.") %>


<div class="container"> 

  <form action="/recipes/create" method="post" class="form-horizontal" role="form">
  <!-- Add Names -->
    <div class="form-group">
      <label for="recipe_name" class="col-sm-2 control-label">Recipe Name</label>
      <div class="col-sm-10">
        <input type="text" id="recipe_name" value="<%=@recipe.name%>" name="recipe[name]" class="form-control" placeholder="Recipe Name">
      </div>
    </div>
  <!-- Add Content  -->
    <div class="form-group">
      <label for="recipe_content" class="col-sm-2 control-label">Directions</label>
      <div class="col-sm-10">
        <textarea id="recipe_content" name="recipe[content]" type="textarea" rows="12" cols="60" value="<%= @recipe.content %>" class="form-control" rows="3">Enter your instructions here </textarea>
      </div>
    </div> 
  <!-- button -->
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Sign in</button>
      </div>
    </div>
  </form>
</div> 

