<% content_for(:title, "New Ingredient | Recipe Book") %> 
<% content_for(:heading, "New Ingredient") %> 
<% content_for(:content, "There are many ingredients in recipes. ") %> 


<div class="container"> 

	<h3>Create New Ingredient</h3>

	<%= render('layouts/errors', :object => @ingredient) %>

	<form action="/ingredients/create" method="post">
		<div class="form-group">
			<label for="ingredient_name" class="col-sm-2 control-label">Ingredient Name</label>
	  		<input id="ingredient_name" name="ingredient[name]" type="text" value="<%= @ingredient.name %>">
		</div>
	    <div class="form-group">
	      <div class="col-sm-offset-2 col-sm-10">
	        <button type="submit" class="btn btn-primary">Add Instructions</button>
	      </div>
	    </div>
	</form>
</div> 