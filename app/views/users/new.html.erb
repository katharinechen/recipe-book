<% content_for(:title, "New User | Recipe Book") %> 
<% content_for(:heading, "New User Signup") %> 
<% content_for(:content, "Become a new member of Recipe Book, and enjoy sharing recipes with individuals of all cultures all over the world.") %> 


<div class="container"> 
  
  <!--   Error Messages  -->
  <div class="row">
    <%= render('layouts/errors', :object => @user) %></br> 
  </div>

  <form role="form" class="form-horizontal" action="/user/create" method="post">

    <h2>Create a New User</h2>
    <p>As a user, you are able to do a brunch of things. So sign up!</p>

    <div class="form-group">
      <label for="user_name">User Name</label>
      <input id="user_name" name="user[name]" class="form-control" type="text" placeholder="Enter the username you want to use for the site.">      
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form> 

</div> 







